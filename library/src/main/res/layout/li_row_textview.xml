<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    style="@style/FileChooserListItemStyle"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/text"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/icon"
        tools:text="@string/title_choose"
        style="@style/FileChooserTextPrimaryStyle"/>

    <TextView
        android:id="@+id/txt_size"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/text"
        android:layout_toLeftOf="@+id/txt_date"
        tools:text="@string/title_choose"
        style="@style/FileChooserTextSecondaryStyle" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_below="@+id/text"
        android:layout_alignRight="@+id/text"
        tools:text="@string/title_choose"
        style="@style/FileChooserTextSecondaryStyle" />

    <ImageView
        android:id="@+id/icon"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/title_choose"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_folder"
        style="@style/FileChooserFileIconStyle"/>

</RelativeLayout>
